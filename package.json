{
  "name": "code-reviewer",
  "displayName": "Code Reviewer",
  "description": "Review selected code with GitHub Copilot Chat using project guidelines.",
  "version": "0.0.1",
  "publisher": "your-name",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:code-reviewer.review"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "code-reviewer.review",
        "title": "Review with Copilot"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Code Reviewer Settings",
      "properties": {
        "codeReviewer.guidelinesPath": {
          "type": "string",
          "default": "",
          "description": "Absolute or workspace-relative path to a custom CODE_REVIEW_GUIDELINES.md file. Leave blank to use the built-in default.'"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./"
  },
  "devDependencies": {
    "@types/node": "^22.15.30",
    "@types/vscode": "^1.85.0",
    "tslib": "^2.3.0",
    "typescript": "^4.9.5"
  }
}
